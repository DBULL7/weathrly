{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "comma-spacing": [
            "error", {
                "before": false,
                "after": true
            }
        ],
        "indent": [
            "error",
            2
        ],
        "key-spacing": [
            "error", {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "keyword-spacing": [
            "error", {
                "before": true,
                "after": true
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "new-cap": [
            "error", {
                "newIsCap": true
            }
        ],
        "newline-after-var": [
            "error",
            "always"
        ],
        "object-shorthand": [
            "error",
            "always"
        ],
        "space-before-blocks": [
            "error", {
                "functions": "always",
                "keywords": "always",
                "classes": "always"
            }
        ]
    }
}
